<h1>Edit Employee</h1>

<%= form_for @employee do |f| %>
    <%= f.label "First Name:" %>
    <%= f.text_field :first_name %> <br><br>
    <%= f.label "Last Name:" %>
    <%= f.text_field :last_name %> <br><br>
    <%= f.label "alias:" %>
    <%= f.text_field :alias %> <br><br>
    <%= f.label "title:" %>
    <%= f.text_field :title %> <br><br>
    <%= f.label "office:" %>
    <%= f.text_field :office %> <br><br>
    
    <%=f.collection_select :dog_id, @dogs, :id, :name, prompt: true %><br><br>
    <%= f.submit %>
<% end %>